<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.neandril.go4lunch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationInit"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBkjaxczMoqyJzCQnRRIJgeJoubLGdSEK0"/>

        <activity
            android:name=".controllers.activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controllers.activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_main"/>
        <activity
            android:name=".controllers.activities.YourLunchActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_yourlunch"
            android:parentActivityName=".controllers.activities.MainActivity" />
        <activity
            android:name=".controllers.activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".controllers.activities.MainActivity" />
        <activity
            android:name=".controllers.activities.RestaurantActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".controllers.activities.MainActivity" />

        <receiver
            android:name=".utils.NotificationReceiver"
            android:exported="true" />
    </application>

</manifest>